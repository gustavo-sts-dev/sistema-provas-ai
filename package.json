{
  "name": "sistema-provas",
  "version": "1.0.0",
  "description": "Sistema completo de gerador e corretor de provas",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "prod": "concurrently \"pnpm run server-prod\" \"pnpm run client-prod\"",
    "server": "cd server && pnpm run dev",
    "server-prod": "cd server && pnpm run prod",
    "client": "cd client && pnpm run dev",
    "client-prod": "cd client && pnpm run build",
    "install-all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["provas", "educação", "avaliação"],
  "author": "",
  "license": "MIT"
}
